<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/place_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/spacing6"
    android:layout_marginLeft="@dimen/spacing6"
    android:layout_marginTop="@dimen/spacing8"
    android:layout_marginBottom="@dimen/spacing4">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="6dp"
        android:elevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/experience_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="center"
                android:src="@drawable/place"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.like.LikeButton
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:circle_end_color="@color/colorAccent"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                app:icon_size="15dp"
                app:icon_type="heart"
                app:like_drawable="@drawable/ic_like_pressed"
                app:unlike_drawable="@drawable/ic_like_white"
                app:layout_constraintRight_toRightOf="@+id/experience_image"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tittle_expe_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIKE RIDE · NEW YORK"
        android:paddingTop="@dimen/spacing8"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingBottom="@dimen/spacing4"
        android:textSize="@dimen/text10"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/description_exp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bike and snack through history"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text14"
        android:paddingBottom="@dimen/spacing4"
        android:gravity="center|left"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price_exp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingBottom="@dimen/spacing4"
        android:text="34 € por noche"
        android:textColor="@color/black"
        android:textSize="@dimen/text15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/calification_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="0.1"
            android:gravity="center|left"
            android:isIndicator="true"
            android:rating="5"/>

        <TextView
            android:id="@+id/calification_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 71"
            android:textSize="@dimen/text12"
            android:paddingBottom="@dimen/spacing4"
            android:gravity="center|left"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>